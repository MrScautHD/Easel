<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <ImplicitUsings>disable</ImplicitUsings>
        <Nullable>disable</Nullable>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <DefineConstants>$(DefineConstants);HEADLESS</DefineConstants>
    </PropertyGroup>
    
    <PropertyGroup>
        <Version>1.0.0-pre</Version>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\Easel.Core\Easel.Core.csproj" />
      <ProjectReference Include="..\Easel.Math\Easel.Math.csproj" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Silk.NET.SDL" Version="2.17.0" />
      <PackageReference Include="StbVorbisSharp" Version="1.22.4" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Include="EaselLogo.png" />
      <EmbeddedResource Include="Roboto-Regular.ttf" />
      <EmbeddedResource Include="Graphics\Shaders\**\*" />
    </ItemGroup>
    
    <ItemGroup>
        <Compile Remove="Audio\**\*" />
        <Compile Remove="Content\**\*" />
        <Compile Remove="GUI\**\*" />
        
        <Compile Remove="Metrics.cs" />
        <Compile Remove="Input.cs" />
    </ItemGroup>

</Project>
